<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jx.dao.UserDao" >


    <!--显示用户列表-->
    <select id="showUser"  resultType="com.jx.model.User">
        SELECT id,username,email,sex,province,hobby FROM c_user
    </select>
    <!--查询-->
    <select id="selectUser" resultType="com.jx.model.User">
        SELECT id,username,email,sex,province,hobby
        FROM c_user
        where id = #{id}
    </select>
    <!--删除数据-->
    <delete id="deleteUser">
        delete from c_user where id = #{id}
    </delete>
    <!--增加数据-->
    <insert id="insertUser" parameterType="com.jx.model.User">
        insert into c_user(id,username,email,sex,province,hobby)
        VALUES(#{id},#{username},#{email},#{sex},#{province},#{hobby})
    </insert>
    <!--修改数据-->
    <update id="updateUser" parameterType="com.jx.model.User">
        update c_user
        set username= #{username},email= #{email},sex= #{sex},
        province= #{province}, hobby= #{hobby}
        where id=#{id};
    </update>
</mapper>